public  class Test5 {
    public static void main(String[] args) {
        int[] scores = getScores();
        System.out.println("六位评委的打分分别是");
        for (int i = 0; i < scores.length; i++) {
            System.out.print(scores[i] + " ");
        }
        int max = getMax(scores);
        int min = getMin(scores);
        int grade = getSum(scores,max,min);
        System.out.println("这位选手的最终得分是"+grade);
    }
    //求最大值
    public static int getMax(int[] scores){
        int max = scores[0];
        for (int i = 0; i < scores.length; i++) {
            if(scores[i] > max){
                max = scores[i];
            }
        }
        return max;
    }
    //求平均值
    public static int getSum(int[] scores,int max,int min){
        int grade = 0;
        for (int i = 0; i < scores.length; i++) {
            grade += scores[i];
        }
        grade = grade - max - min;
        grade /= 4;
        return grade;
    }
    //求最小值
    public static int getMin(int[] scores){
        int min = scores[0];
        for (int i = 0; i < scores.length; i++) {
            if(scores[i] < min){
                min = scores[i];
            }
        }
        return min;
    }
    public static int[] getScores(){
        //定义数组
        int[] scores = new int[6];
        //键盘录入成绩
        for (int i = 0; i < scores.length; ) {
            System.out.println("请输入第"+ (i + 1) + "位评委的打分");
            Scanner sc = new Scanner(System.in);
            int score = sc.nextInt();
            if(score >= 0 && score <= 100){
                scores[i] = score;
                i++;
            }else{
                System.out.println("输入值超出范围，请重新输入第"+ i + 1 +"个数据");
            }
        }return scores;
    }
}






